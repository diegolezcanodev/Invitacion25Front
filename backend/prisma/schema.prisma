// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model slot_history {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(255)
  credits    Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  
  @@map("slot_history")
}

model photos {
  id            Int           @id @default(autoincrement())
  filename      String        @db.VarChar(255)
  original_name String        @db.VarChar(255)
  mimetype      String        @db.VarChar(100)
  size          Int
  caption       String        @db.Text
  author        String        @db.VarChar(255)
  likes         Int           @default(0)
  created_at    DateTime      @default(now()) @db.Timestamp(6)
  
  // Relación con likes
  photo_likes   photo_likes[]
  
  @@map("photos")
}

model photo_likes {
  id         Int      @id @default(autoincrement())
  photo_id   Int
  user_hash  String   @db.VarChar(255)
  created_at DateTime @default(now()) @db.Timestamp(6)
  
  // Relación con photos
  photo      photos   @relation(fields: [photo_id], references: [id], onDelete: Cascade)
  
  // Constraint único para evitar likes duplicados
  @@unique([photo_id, user_hash], map: "unique_photo_user")
  @@map("photo_likes")
}