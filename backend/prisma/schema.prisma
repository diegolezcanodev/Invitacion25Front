generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model photo_likes {
  id        Int    @id @default(autoincrement())
  photo_id  Int
  user_hash String @db.VarChar(255)
  photos    photos @relation(fields: [photo_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "photo_likes_ibfk_1")

  @@unique([photo_id, user_hash], map: "unique_photo_user")
}

model photos {
  id          Int           @id @default(autoincrement())
  url         String        @db.Text
  caption     String        @db.Text
  author      String        @db.VarChar(255)
  likes       Int?          @default(0)
  created_at  DateTime?     @default(now()) @db.Timestamp(0)
  photo_likes photo_likes[]
}

model slot_history {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(255)
  credits    Int
  created_at DateTime? @default(now()) @db.Timestamp(0)
}
